---
import background from '../assets/background.svg';
const { description = "Hello and welcome to my website! I'm a Unity C# Developer based in Hamburg, Germany. I love creating games by improving or developing new game mechanics while also having fun creating innovative game experiences." } = Astro.props;
---
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background-color: #1a1a1a;
        color: #ffffff;
    }
    .bg-video{
        position:absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }


    .hero {
        overflow: hidden;
        min-height: 100vh;
        padding: 2rem;

        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        align-items: center;
        gap: 3rem;

        text-align: left;
    }

    .hero::after{
        content:"";
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,.35);
        z-index: -1;
        backdrop-filter: blur(8px);
    }

    .hero-left{
        max-width: 60ch;
    }

    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .features {
        padding: 4rem 2rem;
        background-color: #2a2a2a;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-card {
        background-color: #333333;
        border-radius: 10px;
        padding: 2rem;
        text-align: center;
    }

    .feature-card img {
        width: 100%;
        height: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }
    .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    }  

    @media (max-width: 900px){
        .hero{ grid-template-columns: 1fr;}
        .hero-right{ order: -1;}
    }

</style>
<body>
    <section class="hero" id="home">
        <video class="bg-video" autoplay muted loop playsinline preload="metadata" poster="src/assets/BuggyFeature.jpg">
            <source src="src/assets/Buggy_trailer.mp4" type="video/mp4">
        </video>
        <div class="hero-left">
            <h1>Mikey Broz</h1>
            <p>{description}</p>
            <button class="cta-button">Games</button>
        </div>

        <div class="hero-right">

        </div>

    </section>

