    .hero {
    }

    .dark {
        background-color: #0b1220;
    }

    .section-title {
        text-align: center;
        letter-spacing: 0.22em;
        text-transform: uppercase;
        color: var(--c-primary);
        font-size: 18px;
        margin: 32px 0;
        font-family: "Itim", sans-serif;
        font-optical-sizing: auto;
        font-style: normal;
        margin-bottom: 1rem;
    }

    .grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: var(--gap);
    }

    @media (max-width: 1100px) {
        .grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }
    @media (max-width: 900px) {
        .grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
    @media (max-width: 640px) {
        .grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 18px;
        }
    }

    .card {
        position: relative;
        border-radius: var(--radius);
        overflow: hidden;
        background: #111827;
        text-decoration: none;
        color: white;
        min-height: 235px;
        max-height: 400px;
        max-width: 200px;
        box-shadow: 0 10px 28px rgba(2, 6, 23, 0.1);
        display: flex;
        flex-direction: column;
    }

    .thumb {
        position: relative;
        height: 225px;
        width: 100%;
        background: #0b1220;
    }
    .thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    .body {
        padding: 14px 14px 12px;
        background:
            linear-gradient(to bottom, rgba(2, 6, 23, 0), rgba(2, 6, 23, 0.15)),
            #0b1220;
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .name {
        font-weight: 700;
        font-size: 15px;
        line-height: 1.2;
        margin: 0;
    }
    .dates {
        font-size: 11px;
        color: rgba(255, 255, 255, 0.72);
        margin: 0;
    }

    .pills {
        margin-top: auto;
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }
    .pill {
        font-size: 10px;
        padding: 4px 7px;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.12);
        user-select: none;
        white-space: nowrap;
    }

    .ext {
        position: absolute;
        right: 10px;
        bottom: 10px;
        width: 28px;
        height: 28px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
        display: grid;
        place-items: center;
        border: 1px solid rgba(255, 255, 255, 0.12);
    }
    .ext svg {
        opacity: 0.9;
    }

    .card.locked {
        pointer-events: none;
        filter: grayscale(1);
        opacity: 0.55;
    }
    .lockBadge {
        position: absolute;
        inset: 0;
        display: grid;
        place-items: center;
        background: rgba(2, 6, 23, 0.25);
    }
    .lockCircle {
        width: 52px;
        height: 52px;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.12);
        border: 1px solid rgba(255, 255, 255, 0.22);
        display: grid;
        place-items: center;
        backdrop-filter: blur(3px);
    }

    .span-center {
        grid-column: 3 / span 1;
    }
    @media (max-width: 900px) {
        .span-center {
            grid-column: auto;
        }
    }
</style>

